class Solution {
//1.make the condition in the loop as simple as possible, normally only allow one pointer to move
//2.try to naturally cover all corner case
public:
    int removeElement(vector<int>& nums, int val) {
        int i=0,j=nums.size()-1;  
        while(i<=j){
            if(nums[i]==val) {
                nums[i]=nums[j];
                j--;    
            }
            else{
                i++;
            }
        }
       return j+1;
    }
};
