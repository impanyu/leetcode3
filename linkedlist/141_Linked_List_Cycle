/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
//tortoise and hare, two pointers
public:
    bool hasCycle(ListNode *head) {
        ListNode* t=head;
        ListNode* h=head;
        while(h!=NULL && h->next!=NULL){
            t=t->next;
            h=h->next;
            h=h->next;
            if(h==t) return true;
        }
        return false;
    }
};
